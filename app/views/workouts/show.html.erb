<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">Workout Details</h3>
    </div>
    <div class="card-body">
      <p class="card-text"><strong>Name:</strong> <%= @workout.name %></p>
      <p class="card-text"><strong>Date:</strong> <%= @workout.date %></p>
      <p class="card-text"><strong>Calories Burned:</strong> <%= @workout.caloriesburned %></p>
      <p class="card-text"><strong>Duration:</strong> <%= @workout.duration %></p>
    </div>
    <div class="card-footer">
      <% if user_signed_in? %><%= link_to 'Edit', edit_workout_path(@workout), class: 'btn btn-primary' %><% end %>
      <%= link_to 'Back', workouts_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>